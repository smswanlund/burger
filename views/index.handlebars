<div class="container">
    <div class="jumbotron">
        <h1>Create and Eat Burgers!</h1>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="panel">
                <h1>Burgers thar are ready to eat:</h1>
                <ul class="list-group">
                    {{#each burgers}}
                    {{#unless this.eaten}}
                    <li class="list-group-item">
                        <div class="input-group">
                            <p class="name">{{this.burger_name}}</p>
                            <span class="input-group-btn">
                                <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
                                    <input type="hidden" name="eaten" value="true">
                                    <button class="btn btn-default btn-lg" type="submit">Eat It!</button>
                                </form>
                            </span>
                        </div>
                    </li>
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>
        </div>


    </div>

    <div class="row">
		<div class="col-md-4 col-md-offset-2">
			<h1>Devoured Burgers</h1>
			<div class="panel panel-default">
				<ul class="list-group">
					{{#each burgers}}
					 {{#if this.devoured}}
					 <li class="list-group-item">
					 	<p class="name">{{this.burger_name}}</p>
					 </li>
					 {{/if}}
					  {{/each}}
				</ul>
			</div>
		</div>

        <div class="col-md-10">
            <p class="head">Add a Burger Here</p>

            <form class="creat-update-form" action="burgers/create" method="POST">
                <div class="form-group">
                    <textarea class="form-control input-lg" type="text" name="burger_name" row="3"></textarea>
                </div>
                <button class="btn btn-default btn-lg" type="submit">Submit</button>
            </form>
        </div>
	</div>
</div>